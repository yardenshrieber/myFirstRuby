<%= form_for(@page) do |f| %>
    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title, placeholder: "Enter page title" %>
    </div>
    <div class="field">
      <%= f.label :body %>
      <%= f.text_area :body, placeholder: "Enter page content" %>
    </div>
    <div class="field">
      <%= f.label :slug  %>
      <%= f.text_field :slug, placeholder: "Enter page slug" %>
    </div>
    <div>
      <%= f.submit "Subbbbmit" %>
    </div>
<% end %>